DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DB
APP_BASE_URL=https://your-vercel-url

ROUTER_ENABLED=true
NOTIFY_ENABLED=true
BILLING_ENABLED=true

STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1XXXXXXXXXX

SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@example.com
HOT_SCORE_THRESHOLD=70
# --- Provider Federation (off by default) ---
# Enable signed, time-bound Provider Portal calls into this client instance
# (See docs/RUNBOOK_FEDERATION_ACTIVATION.md for activation steps)
PROVIDER_FEDERATION_ENABLED=
# Map of keyId -> secret (JSON). Example (do not commit real values):
# PROVIDER_KEYS_JSON={"key-1":"supersecret"}
PROVIDER_KEYS_JSON=
# Allowed clock skew in seconds (default 300)
PROVIDER_CLOCK_SKEW_SEC=300
# Signature mode: when set to 1, server verifier expects sha256:<hex> signatures
# If you enable this on server, also set the same env in the Provider Portal.
PROVIDER_FEDERATION_SIG_SHA256=

# --- Stripe ---
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- App ---
# HOT_SCORE_THRESHOLD=70
# DEFAULT_TZ=America/Denver
