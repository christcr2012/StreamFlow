# --- Application Configuration ---
APP_URL=https://your-app-url.vercel.app

# ðŸŽ¯ ENVIRONMENT CONFIGURATION
# Smart environment detection for development phases:
# - DEVELOPMENT: Local dev with debug features
# - STAGING: Production-quality for testing/evaluation (default on Vercel)
# - PRODUCTION: Live client system (set DISABLE_DEV_USERS=true)

# Set to 'true' to disable dev users and enter true production mode
# DISABLE_DEV_USERS=true

# Development Test Users (work with any password when dev users enabled)
DEV_OWNER_EMAIL=owner@test.com
DEV_MANAGER_EMAIL=manager@test.com
DEV_STAFF_EMAIL=staff@test.com
DEV_ACCOUNTANT_EMAIL=accountant@test.com
DEV_PROVIDER_EMAIL=provider@test.com

# Legacy dev user support
DEV_USER_EMAIL=dev@your-domain.local

# --- Database (Neon PostgreSQL) ---
# Format: postgresql://username:password@host-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://neondb_owner:your_password@ep-your-host-pooler.region.aws.neon.tech/neondb?sslmode=require

# --- Security Tokens ---
ADMIN_BOOTSTRAP_TOKEN=your-admin-bootstrap-token-uuid
SESSION_SECRET=your-session-secret-key

# --- Stripe Payment Processing ---
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# --- AI Integration ---
OPENAI_API_KEY=sk-your-openai-api-key

# --- Email Service (SendGrid) ---
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# --- SMS Service (Twilio) ---
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# --- Billing Automation ---
MV_CRON_TOKEN=your-cron-security-token

# --- Optional: Public API Configuration ---
PUBLIC_ALLOWED_ORIGINS=https://your-domain.com,https://your-app.vercel.app

# --- Optional: Development Seeds ---
SEED_PROVIDER_EMAIL=provider@example.com
SEED_OWNER_EMAIL=owner@example.com
SEED_STAFF_EMAIL=staff@example.com
SEED_ORG_NAME=Your Company Name
SEED_OWNER_PASSWORD=secure_password_123
SEED_STAFF_PASSWORD=secure_password_456
